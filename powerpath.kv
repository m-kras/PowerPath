<WarningPopup@Popup>:
    title: "Exit?"
    size_hint: 0.8, 0.8
    auto_dismiss: True

    canvas.before:
        Color:
            rgba: 0.1, 0.1, 0.1, 1
        Rectangle:
            pos: self.pos
            size: self.size

    FloatLayout:

        Label:
            text: "Exit app?"
            font_size: root.width * 0.05
            size_hint: 0.7, 0.08
            pos_hint: {"center_x": 0.5, "center_y": 0.85}

        Button:
            text: "No"
            font_size: root.width * 0.04
            size_hint: 0.5, 0.2
            pos_hint: {"center_x": 0.5, "center_y": 0.2}
            on_press: root.dismiss()

        Button:
            text: "Yes"
            font_size: root.width * 0.04
            size_hint: 0.5, 0.2
            pos_hint: {"center_x": 0.5, "center_y": 0.5}
            on_press: app.stop()