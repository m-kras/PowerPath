        Spinner:
            id: delwrk_spinner
            text: "Select Workout"
            font_size: root.width * 0.04
            size_hint: 0.7, 0.08
            pos_hint: {"center_x": 0.5, "center_y": 0.75}

        Label:
            id: feedback_label
            font_size: root.width * 0.03
            size_hint: 0.4, 0.05
            pos_hint: {"center_x": 0.5, "center_y": 0.4}

