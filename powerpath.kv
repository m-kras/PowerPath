            font_size: root.width * 0.07
            pos_hint: {"center_x": 0.5, "center_y": 0.9}

        Spinner:
            id: workout_spinner
            text: "Select Workout"
            font_size: root.width * 0.04
            size_hint: 0.75, 0.08
            pos_hint: {"center_x": 0.5, "center_y": 0.73}

        Label:
            text: "Date:"
            font_size: root.width * 0.04
            size_hint: 0.3, 0.08
            pos_hint: {"center_x": 0.16, "center_y": 0.58}

        TextInput:
            id: date_input
            font_size: root.width * 0.04
            size_hint: 0.5, 0.045
