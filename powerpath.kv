<AddWrkScreen>:

    canvas.before:
        Color:
            rgba: 0.1, 0.1, 0.1, 1
        Rectangle:
            pos: self.pos
            size: self.size

    FloatLayout:

        Label:
            text: "Add Workout Plan"
            font_size: root.width * 0.07
            pos_hint: {"center_x": 0.5, "center_y": 0.9}

        TextInput:
            id: name_input
            hint_text: "Workout Name"
            font_size: root.width * 0.045
            bold: True
            size_hint: 0.7, 0.065
            pos_hint: {"center_x": 0.5, "center_y": 0.77}

        TextInput:
            id: exercise_input
            font_size: root.width * 0.045
            size_hint: 0.7, 0.065
            pos_hint: {"center_x": 0.5, "center_y": 0.62}

        Button:
            text: "Add Exercise"
            font_size: root.width * 0.04
            size_hint: 0.5, 0.08
            pos_hint: {"center_x": 0.5, "center_y": 0.45}
            on_press: root.add_exercise()

        Label:
            id: feedback_label
            font_size: root.width * 0.03
            size_hint: 0.4, 0.05
            pos_hint: {"center_x": 0.5, "center_y": 0.38}

        Button:
            text: "Save Workout"
            font_size: root.width * 0.04
            size_hint: 0.5, 0.1
            pos_hint: {"center_x": 0.5, "center_y": 0.3}
            background_color: 0, 0.5, 0.7, 1
            background_normal: ""
            on_press:
                root.save_workout()

        Button:
            text: "Cancel"
            font_size: root.width * 0.03
            size_hint: 0.3, 0.07
            pos_hint: {"x": 0.65, "y": 0.07}
            on_press:
                root.open_popup()


